/*Denna är kopplad till all text*/
* {
    font-family: Asap;
}

/*Detta definierar bakgrundsfärgen på navbaren*/
.navbar {
    background-color: transparent;
}

/*Padding för loggan*/
.navbar-brand {
    padding: 22px 16px;
}


/*De föremål i navbaren som är <a> */
.nav.navbar-nav li a {
    color: black;
    font-size: 1.2em;
}

/*De föremål i navbaren som är <button> */
.nav.navbar-nav li button {
    color: black;
    font-size: 1.2em;
    padding: 4px 0px;
}

/*Styling för en knapp med <a class="btn"> */
.btn {
    background-color: #32E884;
}

    /*Styling för logga-ut knappen*/
    .btn.btn-link.navbar-btn.navbar-link {
        background-color: transparent;
    }


#settings:hover {
    background-color: transparent;
}



/* Wrapping element */
/* Set some basic padding to keep content from hitting the edges */
.body-content {
    padding-left: 15px;
    padding-right: 15px;
}

/* Carousel */
.carousel-caption p {
    font-size: 20px;
    line-height: 1.4;
}

/* Make .svg files in the carousel display properly in older browsers */
.carousel-inner .item img[src$=".svg"] {
    width: 100%;
}

/* QR code generator */
#qrCode {
    margin: 15px;
}

/* Hide/rearrange for smaller screens */
@media screen and (max-width: 767px) {
    /* Hide captions */
    .carousel-caption {
        display: none;
    }
}

/*Dessa gör att sidan tar upp 100% och att footern därför stannar längst ner*/
