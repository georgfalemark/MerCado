@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Person.FirstName"></label>
                <input asp-for="Input.Person.FirstName" class="form-control" />
                <span asp-validation-for="Input.Person.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.LastName"></label>
                <input asp-for="Input.Person.LastName" class="form-control" />
                <span asp-validation-for="Input.Person.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.Gender"></label>
                <input asp-for="Input.Person.Gender" class="form-control" />
                <span asp-validation-for="Input.Person.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.Street"></label>
                <input asp-for="Input.Person.Street" class="form-control" />
                <span asp-validation-for="Input.Person.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.StreetNumber"></label>
                <input asp-for="Input.Person.StreetNumber" class="form-control" />
                <span asp-validation-for="Input.Person.StreetNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.City"></label>
                <input asp-for="Input.Person.City" class="form-control" />
                <span asp-validation-for="Input.Person.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.PostNumber"></label>
                <input asp-for="Input.Person.PostNumber" class="form-control" />
                <span asp-validation-for="Input.Person.PostNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.Country"></label>
                <input asp-for="Input.Person.Country" class="form-control" />
                <span asp-validation-for="Input.Person.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
    <a asp-area="Identity" asp-page="/Account/ChooseIfHaveCompanyOrNot">Registera dig som företagsanvändare</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
