@page
@model RegisterCompanyUserWithoutCompanyModel
@{
    ViewData["Title"] = "Registrera dig som företagsanvändare";
}


<div class="row">
    <div class="col-md-6">

        <h2>@ViewData["Title"]</h2>

        <h4>Skapa ditt nya företagskonto</h4>
        <hr />

        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Input.Person.FirstName"></label>
                <input asp-for="Input.Person.FirstName" class="form-control" />
                <span asp-validation-for="Input.Person.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.LastName"></label>
                <input asp-for="Input.Person.LastName" class="form-control" />
                <span asp-validation-for="Input.Person.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.BirthDay"></label>
                <input asp-for="Input.Person.BirthDay" type="date" class="form-control" />
                <span asp-validation-for="Input.Person.BirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kön</label>
                <select asp-for="Input.Person.Gender" asp-items="Model.Input.Genders" class="form-control">
                    <option disabled selected>--- VÄLJ KÖN ---</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.Country"></label>
                <input asp-for="Input.Person.Country" class="form-control" />
                <span asp-validation-for="Input.Person.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
    <div class="col-md-6"></div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


