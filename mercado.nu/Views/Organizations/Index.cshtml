<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StreetNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PathLogoImage)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.StreetName)
            </td>
            <td>
                @Html.DisplayFor(model => model.StreetNumber)
            </td>
            <td>
                @Html.DisplayFor(model => model.City)
            </td>
            <td>
                @Html.DisplayFor(model => model.Country)
            </td>
            <td>
                @Html.DisplayFor(model => model.ContactPerson.FirstName)
                @Html.DisplayFor(model => model.ContactPerson.LastName)
            </td>
            <td>
                @Html.DisplayFor(model => model.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(model => model.Email)
            </td>
            @if (Model != null)
            {
                <td>
                    <img height="40" width="60" src="@Html.DisplayFor(model => model.PathLogoImage)" />
                </td>
            }

        </tr>
    </tbody>
</table>

@inject SignInManager<ApplicationUser> SignInManager
@if (SignInManager.IsSignedIn(User))
{
    if (Model == null)
    {
        <br />
        <hr />
        <p>
            <a asp-action="Create" class="btn btn-default">Registrera företag</a>
        </p>


    }
    else
    {
        <p>
            <a asp-action="Edit" asp-route-id="@Model.OrganizationId" class="btn btn-danger" style="width: 250px;">Ändra företagsinställningar</a>
        </p>
        <p>
            <a asp-action="Delete" asp-route-id="@Model.OrganizationId" class="btn btn-danger" style="width: 250px">Radera företagskonto</a>
        </p>
    }
}
