@model mercado.nu.Models.ViewModels.RespondersMarketResearchesVm

@{
    var message = ViewData["Inga undersökningar"] as string;
}

@if (Model.Responders.Count == 0)
{

    <h3>@message</h3>
    <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Till förstasidan</a>

}
else
{


    @foreach (var responder in Model.Responders)
    {
        <h1>Undersökningar för @responder.Persons.FirstName @responder.Persons.LastName</h1>
        break;
    }
    <div class="card">
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        @foreach (var responder in Model.Responders)
                        {
                            <th>
                                @Html.DisplayNameFor(modelresponder => responder.MarketResearchs.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(modelresponder => responder.MarketResearchs.Purpose)
                            </th>
                            <th>
                                @Html.DisplayNameFor(modelresponder => responder.MarketResearchs.StartDate)
                            </th>
                            break;
                        }
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var research in Model.Responders)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelresearch => research.MarketResearchs.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelresearch => research.MarketResearchs.Purpose)
                            </td>
                            <td>
                                @Html.DisplayFor(modelresearch => research.MarketResearchs.StartDate)
                            </td>
                            <td>
                                <a class="btn btn-primary" asp-controller="Answers" asp-action="Evaluation" asp-route-marketResearchId="@research.MarketResearchId">Utvärdering av undersökning</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Till förstasidan</a>
        </div>
    </div>
}