@model mercado.nu.Models.MarketResearch

@{
    ViewData["Title"] = "Edit";
}



<h4>Uppdatera undersökning</h4>
<hr />

<div class="row">
    <div class="col-lg-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                @*<input asp-for="Description" class="form-control" />*@
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>

                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purpose" class="control-label"></label>
                @*<input asp-for="Purpose" class="form-control" />*@
                <textarea asp-for="Purpose" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Purpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinAge" class="control-label"></label>
                <input asp-for="MinAge" class="form-control" />
                <span asp-validation-for="MinAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxAge" class="control-label"></label>
                <input asp-for="MaxAge" class="form-control" />
                <span asp-validation-for="MaxAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
                    <option disabled selected>--- VÄLJ KÖN ---</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Area" class="control-label"></label>
                <input asp-for="Area" class="form-control" />
                <span asp-validation-for="Area" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfResponders" class="control-label"></label>
                <input asp-for="NumberOfResponders" class="form-control" />
                <span asp-validation-for="NumberOfResponders" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Spara ändring" class="btn btn-primary" />
                
            </div>
        </form>
    </div>
    <div class="col-lg-6">
        <div class="row">
            <div><h3>Chatten MercaDo hjälper dig!!</h3></div>
        </div>
        <div class="row">
            <iframe class="col" src='https://webchat.botframework.com/embed/MercusV3Bot?s=oBxVZz8JgSM.WAA7VPHeg_MXqHEvEY73VcJyG4X1jqTScyj9A782UcE' style='min-width: 400px; width: 100%; min-height: 500px; background-color: white'></iframe>
        </div>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Startsidan</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

