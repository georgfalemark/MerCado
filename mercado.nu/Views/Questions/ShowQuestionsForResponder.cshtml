@model mercado.nu.Models.ViewModels.ViewAllQuestionsForMarketResearchVm

<form asp-controller="Answers" asp-action="Response">
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8"><h1>Besvara alla frågor och skicka in svaren.</h1></div>
            <div class="col-md-2"></div>
        </div>
        @{int groupName = 0; }
        @foreach (var question in Model.Questions)
        {
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8"><h3>@question.QuestionId</h3></div>
                <div class="col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-8"><h4>@question.ActualQuestion</h4></div>
                <div class="col-md-2"></div>
            </div>
            <div class="row">
                @if (question.QuestionType.ToString() == "Graderingsfråga")
                {
                    <div class="col-md-2"></div>
                    <div id="@groupName" class="col-md-8">

                        @foreach (var questionOption in question.QuestionOptions)
                        {
                            <label for="@questionOption.QuestionOptionId">@questionOption.QuestionOptionHeading</label>
                            <input name="@groupName" id="@questionOption.QuestionOptionId" type="radio" value="@questionOption.Value" />
                        }


                    </div>
                    <div class="col-md-2"></div>
                    groupName = groupName + 1;
                }
                else if (question.QuestionType.ToString() == "Flervalsfråga")
                {
                    <div class="col-md-2"></div>
                    <div id="@groupName" class="col-md-8">
                        @foreach (var questionOption in question.QuestionOptions)
                        {

                            <label for="@questionOption.QuestionOptionId">@questionOption.QuestionOptionHeading</label>
                            <input name="@groupName" id="@questionOption.QuestionOptionId" type="checkbox" value="@questionOption.Value" />

                        }
                    </div>
                    <div class="col-md-2"></div>
                    groupName = groupName + 1;
                }
                else if (question.QuestionType.ToString() == "JaNejfråga")
                {
                    <div class="col-md-2"></div>
                    <div id="@groupName " class="col-md-8">
                        @foreach (var questionOption in question.QuestionOptions)
                        {

                            <label for="@questionOption.QuestionOptionId">Ja</label>
                            <input name="@groupName" id="@questionOption.QuestionOptionId" type="radio" value="true" />
                            <label for="@questionOption.QuestionOptionId">Ja</label>
                            <input name="@groupName" id="@questionOption.QuestionOptionId" type="radio" value="false" />

                        }
                    </div>
                    <div class="col-md-2"></div>
                    groupName = groupName + 1;
                }
                else if (question.QuestionType.ToString() == "Textfråga")
                {
                    <div class="col-md-2"></div>
                    <div id="@groupName" class="col-md-8">
                        @foreach (var questionOption in question.QuestionOptions)
                        {
                            <textarea name="@groupName"></textarea>
                        }

                    </div>
                    <div class="col-md-2"></div>
                    groupName = groupName + 1;
                }
            </div>
        }
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8"><button>Skicka in svar</button></div>
            <div class="col-md-2"></div>
        </div>
    </div>
</form>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8"><a asp-controller="MarketResearches" asp-action="MarketResearchForPerson">Tillbaka till dina undersökningarna</a></div>
    <div class="col-md-2"></div>
</div>


